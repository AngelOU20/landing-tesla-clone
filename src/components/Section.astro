---
const { color, title, subtitle, id } = Astro.props
const textColor = `text-${color}`
---

<section
  class="landing-section bg-black h-screen text-center relative overflow-hidden"
  data-header-color={color}
  id={id}
>
  <div class="z-30 relative h-full flex flex-col">
    <header>
      <h2 class={`${textColor} pt-40 text-[40px] font-medium`}>
        {title}
      </h2>
      <p class={`${textColor} text-sm`}>
        {subtitle}
      </p>
    </header>

    <footer class="flex flex-col flex-grow justify-end pb-20">
      <slot name="footer" />
    </footer>
  </div>

  <div class="absolute inset-0">
    <slot name="background" class="object-center object-cover h-full w-full" />
  </div>
</section>